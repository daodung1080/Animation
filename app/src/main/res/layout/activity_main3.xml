<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main3Activity">

    <Button
            android:text="Bắt đầu"
            android:layout_width="190dp"
            android:layout_height="48dp"
            android:id="@+id/btnBatDau"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>

    <ImageView
            android:layout_width="354dp"
            android:layout_height="320dp"
            app:srcCompat="@drawable/img_dongho"
            android:id="@+id/imageView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/btnBatDau"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintVertical_bias="0.641"
            />

    <ImageView
            android:layout_width="53dp"
            android:layout_height="97dp"
            app:srcCompat="@drawable/img_kimgiay_m"
            android:id="@+id/imgKimGiay"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.524"
            app:layout_constraintVertical_bias="0.454"
            android:background="@null"/>

    <ImageView
            android:layout_width="27dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/img_kimphut_m"
            android:id="@+id/imgKimPhut"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/btnBatDau"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintVertical_bias="0.466"/>

    <ImageView
            android:layout_width="25dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/img_kimgio_m"
            android:id="@+id/imgKimGio"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/btnBatDau"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintVertical_bias="0.447"
            android:background="@android:color/transparent"/>

</android.support.constraint.ConstraintLayout>